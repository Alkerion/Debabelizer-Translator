{
  "version": "1.0.4",
  "manifest_version": 2,
  "name": "Debabelizer Translator",
  "short_name": "debabelizer",
  "web_accessible_resources": [
    "data/*"
  ],
  "background": {
    "page": "lib/chrome/background.html"
  },
  "description": "A handy multi-language translator built on top of Google Translate. Fork of Google\u2122 Translator by Andy Portmen (MPL 2.0).",
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "permissions": [
    "storage",
    "<all_urls>",
    "webRequest",
    "contextMenus",
    "notifications",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_title": "Google\u2122 Translator",
    "default_popup": "data/popup/popup.html",
    "default_icon": {
      "16": "data/icon16.png",
      "32": "data/icon32.png",
      "48": "data/icon48.png",
      "64": "data/icon64.png"
    }
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "js": [
        "data/content_script/inject.js"
      ],
      "css": [
        "data/content_script/inject.css"
      ]
    },
    {
      "all_frames": false,
      "run_at": "document_start",
      "matches": [
        "*://translate.google.com/*"
      ],
      "js": [
        "data/content_script/translate.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{4ee54f2b-cfee-43cd-9cbc-aef8c4fa1f04}",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "16": "data/icon16.png",
    "32": "data/icon32.png",
    "48": "data/icon48.png",
    "64": "data/icon64.png",
    "128": "data/icon128.png"
  },
  "homepage_url": "https://alkerion.github.io/Debabelizer-Translator/"
}